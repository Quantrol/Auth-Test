# Stack Auth 개발환경 별칭 설정
# 이 파일을 ~/.zshrc에 source하여 사용하세요: source /path/to/stack-auth/.zshrc_stack_aliases

# Stack Auth 프로젝트 디렉토리로 이동
alias cdstack='cd /Users/vvelcome/Documents/Auth-ome/stack-auth'

# 빠른 명령어들
alias sdev='./dev.sh quick'           # 빠른 개발 서버 시작
alias sstatus='./dev.sh status'       # 상태 확인
alias smonitor='./monitor.sh monitor' # 실시간 모니터링
alias slogs='./monitor.sh logs'       # 로그 모니터링
alias sperf='./monitor.sh perf'       # 성능 분석

# 서비스 관리
alias sstart='./dev.sh deps'          # 의존성 서비스 시작
alias sstop='./dev.sh stop-deps'      # 의존성 서비스 중지
alias srestart='./dev.sh restart-deps' # 의존성 서비스 재시작

# 데이터베이스 관리
alias sdb='./dev.sh db:init'          # 데이터베이스 초기화
alias sdbreset='./dev.sh db:reset'    # 데이터베이스 리셋
alias sdbseed='./dev.sh db:seed'      # 시드 데이터 삽입

# 빌드 관리
alias sbuild='./dev.sh build'         # 프로젝트 빌드
alias sclean='./dev.sh clean'         # 빌드 파일 정리

# 테스트
alias stest='./dev.sh test'           # 테스트 실행

# 빠른 접속 (브라우저에서 열기)
alias slaunch='open http://localhost:8100'     # 런치패드
alias sdash='open http://localhost:8101'       # 대시보드
alias sapi='open http://localhost:8102'        # API (Swagger 등)
alias sdemo='open http://localhost:8103'       # 데모 앱
alias sdocs='open http://localhost:8104'       # 문서

# 유용한 조합 명령어
alias sfull='./dev.sh deps && ./dev.sh quick'  # 전체 시작
alias scheck='./check-setup.sh'                # 설정 확인

# 개발 도구
alias sprisma='pnpm run prisma studio'         # Prisma Studio
alias slint='pnpm run lint'                    # 린트 실행

echo "Stack Auth 별칭이 로드되었습니다!"
echo "사용 가능한 명령어:"
echo "  sdev     - 빠른 개발 서버 시작"
echo "  sstatus  - 상태 확인"
echo "  smonitor - 실시간 모니터링"
echo "  slaunch  - 런치패드 열기"
echo "  sdash    - 대시보드 열기"
echo "  sdocs    - 문서 열기"
echo "  기타 s로 시작하는 다양한 명령어들..."