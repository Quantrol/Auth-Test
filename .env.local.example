# Stack Auth 로컬 개발환경 설정 예시
# 이 파일을 .env.local로 복사하고 실제 값으로 수정하세요

# 개발 모드
NODE_ENV=development

# PostgreSQL 설정
DATABASE_URL="postgresql://postgres:password@localhost:5432/stackframe"
POSTGRES_URL="postgresql://postgres:password@localhost:5432/stackframe"

# Redis 설정
REDIS_URL="redis://localhost:6379"

# Stack Auth 설정
STACK_SECRET_SERVER_KEY="dev-secret-key-change-in-production"
NEXT_PUBLIC_STACK_PROJECT_ID="internal"
NEXT_PUBLIC_STACK_PUBLISHABLE_CLIENT_KEY="dev-publishable-key"

# API URL 설정
NEXT_PUBLIC_STACK_API_URL="http://localhost:8102"
NEXT_PUBLIC_STACK_DASHBOARD_URL="http://localhost:8101"

# 이메일 설정 (개발용 - Mailhog 사용 시)
SMTP_HOST="localhost"
SMTP_PORT="1025"
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_SECURE="false"

# OAuth 설정 (필요시)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# 로그 레벨
LOG_LEVEL="debug"

# 개발 설정
STACK_SKIP_TEMPLATE_GENERATION="false"
POSTGRES_DELAY_MS="0"